import cv2

image=cv2.imread('img.png')
gray_image=cv2.cvtColor(image,cv2.COLOR_RGB2GRAY)
inverted_image=~gray_image
blurred_image=cv2.GaussianBlur(inverted_image,(25,25),0)
inverted_blurred=~blurred_image
sketch=cv2.divide(gray_image,inverted_blurred,scale=256)

cv2.imshow('colour',image)
cv2.imshow('sketch',sketch)
cv2.waitKey(0)
